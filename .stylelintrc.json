{
  "ignoreFiles": ["**/*"],
  "plugins": ["stylelint-order"],
  "overrides": [
    {
      "files": ["**/*.css"],
      "extends": ["stylelint-config-standard"],
      "rules": {}
    },
    {
      "files": ["**/*.scss"],
      "extends": ["stylelint-config-standard-scss"],
      "rules": {
        "order/order": true,
        "order/properties-order": true
      }
    }
  ],
  "rules": {}
}
