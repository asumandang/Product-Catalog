{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@product/product-data-access": ["libs/product/data-access/src/index.ts"],
      "@product/product-home": [
        "libs/product/feature-product-home/src/index.ts"
      ],
      "@product/product-shell": ["libs/product/shell/src/index.ts"],
      "@product/product-ui": ["libs/product/ui/src/index.ts"],
      "@product/product-ui/product-card": [
        "libs/product/ui/product-card/src/index.ts"
      ],
      "@product/shared-dto": ["libs/shared/dto/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
